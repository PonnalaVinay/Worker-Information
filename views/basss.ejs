    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
      .vi{
        margin-top:40px;
        background:#cbdeed;
        border-style:outset;
        border-width:3px;
        border-color:whitesmoke;
      }
    </style>
</head>
<body style="background:#74b9ff;">
    <div class="container" style="background:#74b9ff; border-radius:3%;margin-top:60px; border-style:outset;border-width:10px;border-color:rgb(218, 243, 235)">
        <div class="col-lg-2 col-sm-2 col-md-2"></div>
        <div class="col-lg-6 col-sm-6 col-md-6">
            <h2 casss="vi">WORKER REGISTRATION</h2>
            <form method="GET" class="form-horizontal" action="Out">
                <div class="form-group vi">
                    <label class="control-label col-sm-3 col-md-3 col-lg-3">NAME:</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" autofocus placeholder="Enter your name" name="persons" required>
                    </div>
                </div>
                <div class="form-group vi">
                    <label class="control-label col-sm-3 col-md-3 col-lg-3">MOBILE NO:</label>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <input type="number" class="form-control" placeholder="Enter your mobile number" name="phnos" required>
                    </div>
                </div>
                <div class="form-group vi">
                    <label class="control-label col-sm-3 col-md-3 col-lg-3">LOCATION:</label>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <input type="text" class="form-control" placeholder="Enter your location" name="localitys" required>
                    </div>
                  </div>
                <div class="form-group vi">
                    <label class="control-label col-sm-3 col-md-3 col-lg-3">OCCUPATION:</label>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <input type="text" class="form-control" placeholder="Enter work name" name="workers" required>
                    </div>
                </div>
                <div class="form-group vi">
                    <label class="control-label col-sm-3 col-md-3 col-lg-3">DATE:</label>
                    <div class="col-sm-8 col-md-8 col-lg-8">
                        <input type="date" class="form-control" placeholder="Enter date" name="dates" required>
                    </div>
                </div>
              <div class="form-group vi">        
                <div class="col-sm-offset-3 col-sm-8">
                  <div class="radio">
                    <label><input type="radio" name="frn"> ARE YOU AVAILABLE</label>
                  </div>
                </div>
              </div>
                <div class="form-group">
                    <div class="col-sm-offset-6 col-sm-6">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>